<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.dev.sigtivity" >

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SigAppTheme" >
        <activity
            android:name=".ActivityMain"
            android:label="@string/title_activity_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ActivityLogin"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ActivitySplash"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TabActivityProfile"
            android:label="@string/title_activity_activity_profile"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TabActivityHotSpot"
            android:label="@string/title_activity_activity_hot_spot"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TabActivityFeed"
            android:label="@string/title_activity_activity_feed" >
        </activity>
        <activity
            android:name=".TabActivitySearch"
            android:label="@string/title_activity_activity_search"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TabActivityNotification"
            android:label="@string/title_activity_tab_activity_notification"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ActivityImageDetail"
            android:label="@string/title_activity_activity_image_detail"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".ActivitySettings"
            android:label="@string/title_activity_activity_settings"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TabActivityHotSpotLayout"
            android:label="@string/title_activity_tab_activity_hot_spot_layout"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".ActivityPhotoCaption"
            android:label="@string/title_activity_activity_photo_caption" >
        </activity>
        <activity
            android:name=".ActivityEditProfile"
            android:label="@string/title_activity_activity_edit_profile" >
        </activity>
    </application>

</manifest>

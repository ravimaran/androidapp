<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fbfbfb">
    <LinearLayout
        android:id="@+id/layoutImgDetail"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <app.dev.sigtivity.DoubleTabImageView
                            android:id="@+id/imgDetailView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="60sp"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_action_likes_large_blue"
                            android:id="@+id/imgLikedHeart"
                            android:visibility="invisible"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_action_unlike_large_grey"
                            android:id="@+id/imgUnLikedHeart"
                            android:visibility="invisible"/>
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/progressBarImageDetail"/>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/profileImg"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginRight="15sp"
                        android:layout_marginLeft="0sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-black"
                        android:text="Thenusha Parani"
                        android:layout_toRightOf="@id/profileImg"
                        android:id="@+id/txtProfileName"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:text="Royal Convention Center"
                        android:layout_below="@id/txtProfileName"
                        android:layout_alignParentRight="false"
                        android:layout_toRightOf="@id/profileImg"
                        android:paddingRight="5sp"
                        android:id="@+id/txtLocationName"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtImgDate"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:layout_alignParentLeft="true"
                        android:paddingRight="5sp"
                        android:drawableLeft="@drawable/ic_clock"/>
                    <TextView
                        android:id="@+id/txtLikesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10sp"
                        android:paddingBottom="5sp"
                        android:drawableLeft="@drawable/ic_action_likes_blue_ldpi" />
                    <TextView
                        android:id="@+id/txtCommentCounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_action_comment_blue_ldpi"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@id/txtLikesCount"
                        android:layout_marginRight="20sp"
                        android:paddingLeft="10sp"
                        android:paddingBottom="5sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextPhotoCaption"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:paddingLeft="15sp"
                        android:text="Event name : User caption"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/listViewComments"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:dividerHeight="1dp"
                    android:divider="@drawable/list_divider"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:padding="8sp"
            android:background="#f8f8f8"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                style="@style/input_text"
                android:hint="Tab here to add a comment..."
                android:layout_weight="1"/>
            <Button
                android:text="ADD"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="5sp"
                android:onClick="addComment"
                android:background="@drawable/button_blue"
                android:id="@+id/btnAddComment"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
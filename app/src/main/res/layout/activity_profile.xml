<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ffffff"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/linearLayoutProfile"
        android:layout_width="fill_parent"
        android:background="#f7f7f7"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:padding="3dp"
            android:src="@drawable/ic_default_profile"
            android:layout_marginLeft="5sp"
            android:layout_weight="0"
            android:id="@+id/imgViewProfile" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/txtViewProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    style="@style/default_text_color"
                    android:fontFamily="sans-serif-black"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:text="Thenusha Parani"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:hint="Short bio. Tap to edit..."
                    android:fontFamily="sans-serif-light"
                    android:maxLines="2"
                    android:maxLength="60"
                    android:lines="2"
                    android:id="@+id/textViewProfileTitle"
                    android:layout_below="@id/txtViewProfileName"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5sp"
                    android:background="@android:color/transparent"
                    style="@style/default_text_color"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayoutProfileContent">
        <LinearLayout
            android:id="@+id/profileStats"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10sp"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:layout_marginTop="1dp">
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:stretchColumns="1">
                <TableRow>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/profile_text"
                        android:text="@string/profile_picture_count"
                        android:layout_weight="1"
                        android:singleLine="false"
                        android:background="@android:color/transparent"
                        android:id="@+id/btnPictureCount"
                        android:onClick="displayPicturesGrid"
                        android:layout_gravity="center|center_horizontal"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_event_count"
                        android:id="@+id/btnEventCount"
                        style="@style/profile_text"
                        android:singleLine="false"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:onClick="displayEventsGrid"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_networks_count"
                        android:id="@+id/btnNetworkCount"
                        style="@style/profile_text"
                        android:singleLine="false"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:onClick="displayNetworks"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profileFrameLayout">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarUserPics"
                android:visibility="gone"
                android:layout_gravity="center" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
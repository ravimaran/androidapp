<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    tools:context="app.dev.sigtivity.ActivitySettings">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginBottom="25sp"
        android:padding="20sp">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="@android:color/transparent"
            android:id="@+id/btnEditProfile"
            android:gravity="center_vertical"
            android:onClick="editProfile_Click"
            android:text="Edit Profile"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#0099cc"></View>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="@android:color/transparent"
            android:id="@+id/btnHideProfile"
            android:gravity="center_vertical"
            android:text="Hide Profile"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginBottom="25sp"
        android:padding="20sp">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="@android:color/transparent"
            android:id="@+id/btnPrivacy"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_action_right_arrow_blue"
            android:text="Privacy Setting"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#0099cc"></View>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="@android:color/transparent"
            android:id="@+id/btnReportProblem"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_action_right_arrow_blue"
            android:text="Report Problem"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="20sp">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="@android:color/transparent"
            android:id="@+id/btnChangePassword"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_action_right_arrow_blue"
            android:text="Change Password"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#0099cc"></View>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="@android:color/transparent"
            android:id="@+id/btnLogout"
            android:onClick="logOutUser"
            android:gravity="center_vertical"
            android:text="Logout"/>
    </LinearLayout>
</LinearLayout>

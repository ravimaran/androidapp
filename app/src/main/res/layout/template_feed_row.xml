<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/hotSpotItemLayout"
        android:padding="10sp"
        android:background="#ffffff">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/hotSpotImg"
            android:layout_width="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/defaultdetail"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="120sp"
            android:layout_alignBottom="@id/hotSpotImg"
            android:background="#bfffffff">
            <ImageView
                android:id="@+id/hotSpotProfileImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="3dp"
                android:layout_marginLeft="10sp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_default_profile"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Thenusha Parani"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000"
                android:id="@+id/hotSpotProfileName"
                android:layout_marginLeft="15sp"
                android:textSize="20sp"
                android:layout_alignTop="@id/hotSpotProfileImg"
                android:layout_toRightOf="@id/hotSpotProfileImg"/>
            <TextView
                android:id="@+id/txtImgDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="12d"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_clock"
                android:layout_alignTop="@id/hotSpotProfileImg"
                android:layout_alignParentRight="true"
                android:paddingRight="20sp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPhotoCaption"
                android:textColor="#000000"
                android:text="Testing Caption"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/hotSpotProfileName"
                android:textSize="18sp"
                android:layout_toRightOf="@id/hotSpotProfileImg"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/txtLikesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5sp"
                android:drawableLeft="@drawable/ic_action_likes_blue_ldpi" />
            <TextView
                android:id="@+id/txtCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_comment_blue_ldpi"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/txtLikesCount"
                android:layout_marginRight="40sp"
                android:paddingBottom="5sp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageUrl"
            android:visibility="gone"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>